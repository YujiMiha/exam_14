.posts-wrapper.row
  .post
    .post-head
      .name

    .image.center-block
      =image_tag @post.image.url(:medium)
    %p.caption
      =@post.caption

      .text-center.edit-links
        - if @post.user.id == current_user.id

          = link_to "戻る", posts_path
          |
          = link_to "編集", edit_post_path(@post)
        - else

          =link_to "Cancel", root_path
