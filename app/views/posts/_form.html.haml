.posts-wrapper.row
.posts-wrapper
  .post
    .post-body
      .image-wrap

        = simple_form_for @post, html: { multipart: true } do |f|
          .row

          .container-fluid
            .form-group.text-center
              %h4 画像投稿
              = f.input :image, label: false, input_html: { onChange: 'loadFile(event)' }
            .form-group.text-center
              = f.input :caption, label: false, placeholder: 'コメント'
            .form-group.text-center
              = f.button :submit, class: 'btn-lg btn-info btn-block'
